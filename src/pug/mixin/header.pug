mixin header
    header.header 
        .header-top
            .header-top__container.header-container
                .header-top__container-block 
                    a(href="#").logo LOGOS
                    form(action="#").header-top__form
                        input(type="text")
                        button.search-address
                            svg(width='21' height='21' viewbox='0 0 21 21' fill='none' xmlns='http://www.w3.org/2000/svg')
                                circle(cx='9.76657' cy='9.7666' r='8.98856' stroke='white' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round')
                                path(d='M16.0183 16.4851L19.5423 20' stroke='white' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round')
                    a(href="tel:+7 (917) 510-57-59").header-top__number
                        .number-img 
                            svg(width='14' height='14' viewbox='0 0 14 14' fill='none' xmlns='http://www.w3.org/2000/svg')
                                path(fill-rule='evenodd' clip-rule='evenodd' d='M0.993287 2.249C1.20417 1.89915 2.36678 0.629167 3.19526 0.667506C3.44311 0.68873 3.66222 0.837979 3.84024 1.01187H3.84092C4.249 1.4117 5.41982 2.92062 5.48555 3.23829C5.64782 4.01739 4.7187 4.46651 5.00284 5.25178C5.72725 7.02428 6.97544 8.27236 8.74879 8.99602C9.53345 9.28082 9.98261 8.35246 10.7618 8.51404C11.0795 8.58045 12.5892 9.75048 12.9884 10.1592V10.1592C13.1616 10.3365 13.3123 10.5563 13.3328 10.8041C13.3636 11.677 12.0148 12.8553 11.7518 13.0059C11.1315 13.4502 10.3222 13.442 9.33557 12.9833C6.58243 11.8379 2.1826 7.52132 1.01588 4.66437C0.569463 3.6833 0.539336 2.86859 0.993287 2.249Z' stroke='white' stroke-linecap='round' stroke-linejoin='round')
                                path(d='M8.71027 0.833313C11.1783 1.10731 13.1269 3.05398 13.4043 5.52131' stroke='white' stroke-linecap='round' stroke-linejoin='round')
                                path(d='M8.71027 3.19531C9.89027 3.42531 10.8123 4.34731 11.0423 5.52731' stroke='white' stroke-linecap='round' stroke-linejoin='round')
                        .number-info 
                            span.before-text Контакты:
                            span.number +7 (917) 510-57-59
                a(href="#").basket-btn.btn
                    span.basket-btn__text Корзина
                    div.basket-number__wrapper
                        span.basket-number 0
        block
        .header-bottom
            .header-container.header-bottom__container   
                ul.header-nav
                    - let navName = ['Холодные закуски', 'Горячие закуски', 'Мясные блюда', 'Супы', 'Рыбные блюда', 'Гриль меню', 'Фирменные блюда', 'Напитки']
                    each item in navName
                        li.nav-item= item 